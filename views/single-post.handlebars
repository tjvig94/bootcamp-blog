<div class="container">
    <h3>{{title}}</h3><br>
    <p>{{content}}</p><br>
    <p>By {{user.name}}</p>
    <div class="container">
        <h4>Comments</h4>
            {{#each comments as |comment|}}
                <div class="container">
                    {{comment.user.name}}: {{comment.comment_text}}
                </div>
            {{/each}}
        </div>
</div>
